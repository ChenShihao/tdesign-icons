{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types",
    ]
  }
}